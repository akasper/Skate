source 'http://rubygems.org'

gem 'rails', '3.0.3'
gem 'dm-rails'
gem 'dm-migrations'
gem 'dm-validations'
gem 'haml-rails'
gem 'haml'

# We keep these separate from testing dependencies (below), since 
# they serve a different purpose
group :development, :test do
  gem 'pg'
  gem 'dm-postgres-adapter'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'ZenTest'
  gem 'autotest'
  gem 'autotest-rails'
  gem 'ruby-debug19'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'rspec-rails', '2.2.0'
  gem 'cucumber-rails'
  gem 'metric_fu'
end
